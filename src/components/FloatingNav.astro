---
import { Home, FileText, Award, Folder, User } from "lucide-react";

const navItems = [
  { href: "/", label: "Home", icon: Home },
  { href: "/articles", label: "Articles", icon: FileText },
  { href: "/projects", label: "Projects", icon: Folder },
  { href: "/about", label: "About", icon: User },
];
---

<nav class="fixed bottom-6 left-1/2 -translate-x-1/2 z-50 w-full max-w-md px-4">
  <div
    class="flex items-center justify-between px-2 py-1.5 bg-surface/90 backdrop-blur-xl border border-black/10 rounded-full shadow-2xl shadow-black/5"
  >
    {
      navItems.map((item) => {
        const isActive = Astro.url.pathname === item.href;
        return (
          <a
            href={item.href}
            class={`group relative flex items-center gap-2 px-4 py-2 rounded-full transition-all duration-300 ${
              isActive
                ? "bg-black text-white"
                : "hover:bg-black/5 text-gray-500 hover:text-gray-900"
            }`}
            aria-label={item.label}
          >
            <item.icon
              className={`w-4 h-4 ${isActive ? "text-white" : "text-current"}`}
            />

            <span class="text-sm font-medium font-mono tracking-tight">
              {item.label}
            </span>
          </a>
        );
      })
    }
  </div>
</nav>
