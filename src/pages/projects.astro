import { MoveUpRight, Github, Lock, Award, ExternalLink } from "lucide-react";

const projects = [
    {
        title: "Project Akari",
        description: "An LLM downstreaming project focusing on Entry-sheet generation, Resume Polishing, and Interview preparation. I developed this project with Team CrossPolate",
