    },
    {
        title: "The Future of Payment Technologies",
        issuer: "University of Michigan",
        date: "Jul 2025",
        logo: "https://s2.loli.net/2026/02/02/yuO3gi8foIdbsjQ.png",
        link: "https://www.coursera.org/account/accomplishments/verify/7XZR7257RG8D",
        description: "New ways of making payments from consumer-to-business (C2B), from consumer-to-consumer (C2C), and from business-to-business (B2B)"
    },
    {
        title: "Blockchain Basics",
        issuer: "University at Buffalo",
        date: "May 2025",
        logo: "https://s2.loli.net/2026/02/02/h9BFZd6g25vHlNb.jpg",
        link: "https://www.coursera.org/account/accomplishments/verify/MPG0I0S12H5O",
        description: "Foundational concepts of blockchain"
    },
    {
        title: "MicroMaster of Big Data Technology",
        issuer: "The Hong Kong University of Science and Technology",
        date: "Jun 2024",
        logo: "https://s2.loli.net/2026/02/02/fiyrQE36XwD74Rt.png",
        link: "https://credentials.edx.org/credentials/6e7ed4d4ae0446ac9ad6d8bf6c6e343a/",
        description: "A program offered by The Hong Kong University of Science and Technology, in collaboration with edX."
    },
    {
        title: "Big Data Technology Capstone Project",
        issuer: "edX",
        date: "Jun 2024",
        logo: "https://s2.loli.net/2026/02/02/xRDh3L9EPQwKJ5C.png",
        link: "https://courses.edx.org/certificates/a2a42f6c47744139b73b014808ff8cc0",
        description: "Big Data Technology Capstone Project"
    }
];
---

<Layout title="Projects | Shiranai" description="My portfolio of projects and certifications.">
    <section class="pt-32 pb-12 md:pt-48 md:pb-24 px-6 md:px-12 bg-background relative overflow-hidden">
        <div class="container mx-auto max-w-6xl">
            <!-- Header -->
            <div class="mb-24">
                <h1 class="text-7xl md:text-9xl font-heading font-black tracking-tighter text-gray-900 mb-8 leading-[0.9]">
                    Work.
                </h1>
                <p class="text-xl md:text-2xl text-gray-500 font-light max-w-2xl leading-relaxed">
                    A collection of experiments, products, and verified expertise.
                </p>
            </div>

            <!-- Projects Grid -->
            <section class="mb-32">
                <div class="flex items-end justify-between mb-12 border-b border-black text-black pb-4">
                    <h2 class="font-mono text-sm uppercase tracking-widest">Selected Projects</h2>
                    <span class="font-mono text-sm">{projects.length} Items</span>
                </div>

                <div class="space-y-16">
                    {projects.map((project, index) => (
                        <div class="project-item group flex flex-col md:flex-row gap-8 md:gap-12 items-start">
                             <!-- Image Container -->
                            <div class="w-full md:w-[320px] flex-shrink-0 relative overflow-hidden rounded-lg aspect-[16/10] bg-gray-100 shadow-sm group-hover:shadow-md transition-shadow duration-300">
                                {project.image ? (
                                    <img 
                                        src={project.image} 
                                        alt={project.title}
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 will-change-transform"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center bg-gray-50 border border-gray-100 overflow-hidden relative transition-all duration-500 group-hover:bg-white select-none">
                                        <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); background-size: 24px 24px;"></div>
                                        <div class="absolute top-4 left-4 w-2 h-2 border-t border-l border-gray-200 transition-colors duration-500 group-hover:border-gray-300"></div>
                                        <div class="absolute top-4 right-4 w-2 h-2 border-t border-r border-gray-200 transition-colors duration-500 group-hover:border-gray-300"></div>
                                        <div class="absolute bottom-4 left-4 w-2 h-2 border-b border-l border-gray-200 transition-colors duration-500 group-hover:border-gray-300"></div>
                                        <div class="absolute bottom-4 right-4 w-2 h-2 border-b border-r border-gray-200 transition-colors duration-500 group-hover:border-gray-300"></div>
                                        <span class="text-2xl md:text-3xl font-heading font-black text-gray-200 uppercase tracking-tighter transition-all duration-700 group-hover:text-gray-300 group-hover:scale-105 text-center px-8 leading-[0.9] break-words">
                                            {project.title}
                                        </span>
                                        <div class="absolute bottom-4 right-6 flex items-center gap-2">
                                            <span class="text-[9px] font-mono text-gray-400 uppercase tracking-widest leading-none">{project.status}</span>
                                            <div class={`w-1 h-1 rounded-full ${project.status === 'live' ? 'bg-green-500' : 'bg-gray-300'}`}></div>
                                        </div>
                                    </div>
                                )}
                                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-4">
                                     {project.status === 'live' ? (
                                        <a href={project.link} target="_blank" class="p-2 bg-white text-black rounded-full hover:scale-110 transition-transform" title="Visit Website">
                                            <MoveUpRight className="w-4 h-4" />
                                        </a>
                                     ) : (
                                        <div class="p-2 bg-white/20 text-white backdrop-blur-md rounded-full cursor-not-allowed" title="Under Construction">
                                            <Lock className="w-4 h-4" />
                                        </div>
                                     )}
                                     {project.github && (
                                         <a href={project.github} target="_blank" class="p-2 bg-white text-black rounded-full hover:scale-110 transition-transform" title="View Source">
                                            <Github className="w-4 h-4" />
                                        </a>
                                     )}
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="flex-grow pt-1">
                                <div class="flex items-baseline justify-between mb-3 border-b border-gray-100 pb-3 group-hover:border-gray-200 transition-colors">
                                    <h3 class="text-2xl font-heading font-bold text-gray-900 leading-tight group-hover:text-primary transition-colors">
                                        {project.title}
                                    </h3>
                                    {project.status === 'construction' && (
                                        <span class="font-mono text-xs text-gray-400 uppercase tracking-wider flex-shrink-0 ml-4">
                                            / In Progress
                                        </span>
                                    )}
                                </div>
                                
                                <p class="text-gray-500 text-base leading-relaxed mb-4 max-w-2xl">
                                    {project.description}
                                </p>
                                
                                <div class="flex flex-wrap gap-x-4 gap-y-2">
                                    {project.tags.map(tag => (
                                        <span class="text-xs font-mono text-gray-400">#{tag}</span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </section>

            <!-- Certificates List -->
            <section class="mb-32">
                <div class="flex items-end justify-between mb-12 border-b border-black text-black pb-4">
                    <h2 class="font-mono text-sm uppercase tracking-widest">Certifications</h2>
                    <span class="font-mono text-sm">{certificates.length} Credentials</span>
                </div>

                <div class="space-y-0">
                    {certificates.map((cert) => (
                        <a href={cert.link} target="_blank" class="cert-row group block relative py-8 border-b border-gray-200 hover:border-black transition-colors duration-300">
                             <div class="flex flex-col md:flex-row md:items-center gap-6 md:gap-12">
                                <!-- Logo (Smaller & cleaner) -->
                                <div class="w-12 h-12 flex-shrink-0">
                                    <img src={cert.logo} alt={cert.issuer} class="w-full h-full object-contain" />
                                </div>

                                <div class="flex-grow flex flex-col md:flex-row md:items-center gap-4 md:gap-8">
                                    <div class="md:w-[40%] flex-shrink-0">
                                        <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary transition-colors">
                                            {cert.title}
                                        </h3>
                                        <p class="text-sm text-gray-500 font-mono mt-1">{cert.issuer}</p>
                                    </div>
                                    
                                    <div class="md:flex-grow">
                                        <p class="text-gray-600 leading-relaxed text-sm">
                                            {cert.description}
                                        </p>
                                    </div>

                                    <div class="flex-shrink-0 md:text-right w-24">
                                        <span class="font-mono text-sm text-gray-400 group-hover:text-black transition-colors">{cert.date}</span>
                                    </div>
                                </div>
                                
                                <div class="hidden md:block opacity-0 -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
                                    <ExternalLink className="w-5 h-5 text-primary" />
                                </div>
                             </div>
                        </a>
                    ))}
                </div>
            </section>
        </div>
    </section>

    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";
        gsap.registerPlugin(ScrollTrigger);

        // Header Animation
        gsap.from("h1", { opacity: 0, y: 100, duration: 1.2, ease: "power4.out" });
        gsap.from("p", { opacity: 0, y: 20, duration: 1, delay: 0.2, ease: "power3.out" });

        // Projects Stagger
        (gsap.utils.toArray('.project-item') as HTMLElement[]).forEach((card, i) => {
            gsap.from(card, {
                scrollTrigger: {
                    trigger: card,
                    start: "top bottom-=100",
                },
                opacity: 0,
                y: 50,
                duration: 0.8,
                delay: i * 0.1, // simple stagger based on index if rendered sequentially
                ease: "power2.out"
            });
        });

        // Certificates Stagger
        (gsap.utils.toArray('.cert-row') as HTMLElement[]).forEach((row, i) => {
            gsap.from(row, {
                scrollTrigger: {
                    trigger: row,
                    start: "top bottom-=50",
                },
                opacity: 0,
                x: -20,
                duration: 0.6,
                delay: i * 0.1,
                ease: "power2.out"
            });
        });
    </script>
</Layout>
